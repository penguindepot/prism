{
  "name": "prism-claude",
  "version": "0.1.2",
  "description": "Package Registry & Installation System Manager for Claude Code extensions",
  "keywords": [
    "claude-code",
    "package-manager",
    "cli",
    "extensions"
  ],
  "author": "penguindepot",
  "license": "MIT",
  "bin": {
    "prism": "bin/prism"
  },
  "main": "./bin/prism",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "yaml": "^2.3.4",
    "tar": "^6.2.0",
    "node-fetch": "^3.3.2",
    "semver": "^7.5.4",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.55.0"
  },
  "scripts": {
    "start": "node bin/prism",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/integration", 
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js test/e2e",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --watchAll=false",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "publish-package": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/penguindepot/prism.git"
  },
  "homepage": "https://github.com/penguindepot/prism#readme",
  "bugs": {
    "url": "https://github.com/penguindepot/prism/issues"
  }
}
